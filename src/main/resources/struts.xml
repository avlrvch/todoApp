<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="false" />
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        <default-action-ref name ="index"></default-action-ref>
        <action name="index" class="ua.net.azhytnytskyi.action.ToDoListAction">

            <result name="success">index.jsp</result>
        </action>
        <action name="add"
                class="ua.net.azhytnytskyi.action.ToDoListAction" method="addNewToDoEntry">
            <result name="success" type="chain">index</result>
            <result name="input" type="chain">index</result>
        </action>

        <action name="delete"
                class="ua.net.azhytnytskyi.action.ToDoListAction" method="deleteToDoEntry">
            <result name="success" type="chain">index</result>

        </action>
        <action name="getAll"
                class="ua.net.azhytnytskyi.action.ToDoListAction" method="getAllEntries">
            <result name="success" type="chain">index</result>

        </action>
        <action name="edit"
                class="ua.net.azhytnytskyi.action.ToDoListAction" method="editToDoEntry">
            <result name="success" type="chain">index</result>

        </action>

        <action name="updateList"
                class="ua.net.azhytnytskyi.action.ToDoListAction">
            <result name="success">update.jsp</result>
        </action>
        <action name="toDoList" method="toDoList"
                class="ua.net.azhytnytskyi.action.ToDoListAction" >
            <result name="success">index.jsp</result>
        </action>
    </package>

</struts>